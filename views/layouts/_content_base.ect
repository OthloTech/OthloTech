<!DOCTYPE html>
<html lang="ja">
  <% include 'includes/_head.ect' %>
  <body>
    <% include 'includes/_scripts' %>
  	<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  	  <% include 'includes/_header.ect' %>
      <main class="mdl-layout__content">
        <% if(typeof @hero == 'undefined') : %>
          <section class="othlo-content--hero mdl-typography--text-center" style="background-color: #424242">
        <% else : %>
          <section class="othlo-content--hero mdl-typography--text-center" style="background-image: url('<%- @hero %>')">
        <% end %>
        </section>
        <section class="othlo-container mdl-grid">
          <div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
          <div class="othlo-content mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
            <% content %>
          </div>
          <div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
        </section>
        <% include 'includes/_footer.ect' %>
      </main>
  	</div>
  </body>
</html>
